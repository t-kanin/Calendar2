<%= stylesheet_link_tag "sessions" %>

<div class = "center-item" >
    <%= form_with url: session_path do |form| %> 
        <div class="mb-3">
            <%= form.label :email%>
            <%= form.email_field :email, class: "form-control", placeholder: "abc@gmail.com"%>
        </div>
        <div class="mb-3">
            <%= form.label :password %>
            <%= form.password_field :password, class: "form-control", placeholder: "password"%>
        </div> 
        <!-- after submit takes the user to the create action in session controller --> 
        
        <div class = "row mb-3">
            <div class = "col">
                <%= link_to 'Not Register? ', new_user_path %> 
            </div>
            <div class = "col">
                <%= form.submit 'Log In', class: "btn btn-primary"%>
            </div>
        </div>
        <% end %> 
</div>
