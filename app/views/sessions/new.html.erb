<div class = "d-flex">
    <!-- Add background to the right side -->
    <div class = 'col-8'>
    
    </div>

    <div class = 'col-4'>
        <h1 class = "text-Center">Welcome</h1>
        <%= form_with url: session_path do |form| %> 
            <div class="form-group">
                <%= form.label :email%>
                <%= form.email_field :email, class: "form-control "%>
            </div>
            <div class="form-group">
                <%= form.label :password %>
                <%= form.password_field :password, class: "form-control"%>
            </div> 
            <!-- after submit takes the user to the create action in session controller --> 
            
            <div class = "row">
                <div class = "col">
                    <%= link_to 'Sign Up', new_user_path %> 
                </div>
                <div class = "col">
                    <%= form.submit 'Log In', class: "btn btn-primary"%>
                </div>
            </div>
        <% end %> 
    </div>

</div>
